<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/black_gradient" />

    <TextView
        android:id="@+id/txt_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_news_description"
        android:layout_marginStart="8dp"
        android:text="@string/content_title"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_news_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:maxWidth="250dp"
        android:text="@string/content_description"
        android:textColor="#BEBEBE"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_news_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txt_news_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:drawableEnd="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:text="@string/content_category"
        android:textColor="@android:color/white" />
</RelativeLayout>